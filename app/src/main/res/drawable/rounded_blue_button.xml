<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#90CAF9"/> <!-- Light blue (disabled) -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#64B5F6"/>
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1976D2"/> <!-- Dark blue when pressed -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#1565C0"/>
        </shape>
    </item>

    <!-- Default/Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Normal blue -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#1976D2"/>
        </shape>
    </item>

</selector>
