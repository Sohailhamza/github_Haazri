<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Dialog style box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_edittext"
            android:padding="15dp"
            android:gravity="center_horizontal">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/green"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Employee"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Form fields -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/rounded_edittext"
                android:hint="Name"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:singleLine="true"
                android:background="@drawable/rounded_edittext"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password (6+ chars, capital, special, number)"
                android:background="@drawable/rounded_edittext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/etPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="03123456789"
                android:singleLine="true"
                android:background="@drawable/rounded_edittext"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address where belongs"
                android:background="@drawable/rounded_edittext"
                android:layout_marginTop="5dp"/>

            <!-- Image -->
            <ImageView
                android:id="@+id/imgEmployee"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_person_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_edittext"
                android:contentDescription="Employee photo" />

            <Button
                android:id="@+id/btnPickImage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Select Photo"
                android:backgroundTint="@color/green"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>

            <!-- Add Employee Button -->
            <Button
                android:id="@+id/btnAddEmployeeConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Employee"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
